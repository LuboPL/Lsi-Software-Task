{% extends 'base.html.twig' %}
{% form_theme form 'report/fields.html.twig' %}

{% block title %}Raport{% endblock %}

{% block body %}
  <main class="page">
    <div class="container">
      <h1 class="title">Historia eksportów</h1>
      {{ form_start(form, { attr: { class: 'card' } }) }}
        <div class="filters">
          {{ form_row(form.locationName, { label: 'Lokal', placeholder: '- Wszystkie -' }) }}
          {{ form_row(form.dateFrom, { label: 'Data od', attr: { lang: 'en-CA' } }) }}
          {{ form_row(form.dateTo, { label: 'Data do', attr: { lang: 'en-CA' } }) }}
        </div>
        <div class="actions">
          <button class="button" type="submit">Zatwierdź</button>
          <a class="link" href="{{ path('export_history') }}">Reset</a>
        </div>
      {{ form_end(form) }}

      <div class="card">
        {% if records is empty %}
          <p class="empty">Brak wyników dla wybranych filtrów.</p>
        {% else %}
          <table>
            <thead>
              <tr>
                <th>Nazwa</th>
                <th>Data</th>
                <th>Godzina</th>
                <th>Użytkownik</th>
                <th>Lokal</th>
              </tr>
            </thead>
            <tbody>
              {% for row in records %}
                <tr>
                  <td>{{ row.exportName }}</td>
                  <td>{{ row.exportedAt|date('Y-m-d') }}</td>
                  <td>{{ row.exportedAt|date('H:i:s') }}</td>
                  <td>{{ row.exportedByUsername }}</td>
                  <td>{{ row.locationName }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        {% endif %}
      </div>
    </div>
  </main>
{% endblock %}
